{
	"compilerOptions": {
		"checkJs": true,
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"lib/*": ["lib/*"]
		}
	},
	"exclude": ["**/*.jsx", "test", "scripts", "node_modules", "dist"],
	"include": [
		"frameworks/lit-html",
		"frameworks/preact",
		"frameworks/preact-hooks",
		"frameworks/react",
		"frameworks/react-hooks",
		"frameworks/svelte",
		"frameworks/vue"
	]
}
