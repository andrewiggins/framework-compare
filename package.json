{
  "name": "framework-compare",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "description": "Compare implementations of some basic webpages in different frameworks",
  "main": "index.js",
  "scripts": {
    "start": "node ./scripts/dev.js",
    "build": "node ./scripts/build.js",
    "dev": "node ./scripts/dev.js",
    "serve": "sirv --dev dist",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:debug": "cross-env PPTR_DEBUG=true jest --runInBand",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "format": "prettier --ignore-unknown --write .",
    "tsc": "tsc -p jsconfig.json && npm run tsc -ws --if-present"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewiggins/framework-compare.git"
  },
  "author": "Andre Wiggins",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewiggins/framework-compare/issues"
  },
  "homepage": "https://github.com/andrewiggins/framework-compare#readme",
  "workspaces": [
    "./frameworks/*",
    "./scripts/",
    "./tests"
  ],
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,html,vue,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/html-minifier": "^4.0.6",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "cross-env": "^10.1.0",
    "html-minifier": "^4.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-puppeteer": "^11.0.0",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "puppeteer": "^24.31.0",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "rollup-plugin-visualizer": "^6.0.5"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "transform": {
      "^.+\\.[t|j]sx?$": "<rootDir>/tests/babelTransformer.js"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "volta": {
    "node": "24.11.1"
  }
}
