{
  "name": "framework-compare",
  "version": "0.0.1",
  "private": true,
  "description": "Compare implementations of some basic webpages in different frameworks",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && yarn workspaces run build && node ./scripts/build.js",
    "dev": "node ./scripts/dev.js",
    "deploy": "yarn build && yarn test && node ./scripts/deploy.js",
    "serve": "serve -c scripts/serve.json",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewiggins/framework-compare.git"
  },
  "author": "Andre Wiggins",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewiggins/framework-compare/issues"
  },
  "homepage": "https://github.com/andrewiggins/framework-compare#readme",
  "workspaces": [
    "./frameworks/*",
    "./scripts/"
  ],
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "7.0.0",
    "@types/jest": "^26.0.7",
    "gh-pages": "^2.2.0",
    "html-minifier": "^4.0.0",
    "husky": "^4.2.3",
    "jest": "^26.1.0",
    "jest-puppeteer": "^4.4.0",
    "lint-staged": "^10.0.7",
    "puppeteer": "^2.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^1.30.1",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-visualizer": "^3.3.1"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "transform": {
      "^.+\\.[t|j]sx?$": "<rootDir>/tests/babelTransformer.js"
    }
  }
}
